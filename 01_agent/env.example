# OpenAI API Key (required)
OPENAI_API_KEY=

# Firecrawl API Key (required for web scraping)
FIRECRAWL_API_KEY=

# Resend API Key (required for email sending)
RESEND_API_KEY=

# Resend default from address (required for email sending)
RESEND_DEFAULT_FROM=newsletter@yourdomain.com

# Allowed recipients whitelist (optional, comma-separated)
# Supports exact emails or domain patterns (@example.com)
# If not set, all recipients are allowed
RESEND_ALLOWED_RECIPIENTS=test@example.com,@yourdomain.com

# Firecrawl output directory (optional, defaults to workspace/web)
FIRECRAWL_OUTPUT_DIR=/path/to/01_agent/workspace/web

# Firecrawl output mode: "direct" or "file" (optional, defaults to "direct")
FIRECRAWL_OUTPUT_MODE=direct
